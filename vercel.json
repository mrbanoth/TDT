{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "env": {
          "NODE_ENV": "production"
        },
        "includeFiles": [
          "public/**/*",
          "src/assets/**/*"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)\\.(jpg|jpeg|png|svg|gif|ico|webp|woff|woff2|eot|ttf|otf)$",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}